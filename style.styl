.options
  background-color: rgba(0, 0, 0, 0.875)
  color: white
  padding: 0 20px
  position: absolute
  width: 100%
  height: 100%
  top: 100%
  z-index: 9000

  transition-duration: 0.3s

  &.up
    top: 0

  .key
    display: inline-block
    padding-right: 20px
    text-align: right
    vertical-align: top
    width: 160px
